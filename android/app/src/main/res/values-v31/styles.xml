<resources>

    <!-- Splash theme for Android 12+ -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Solid BLACK screen while the app starts -->
        <item name="android:windowSplashScreenBackground">@android:color/black</item>

        <!-- Use your launcher icon in the middle -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Icon’s circular backdrop also black (not white) -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/black</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Theme used after splash, before Flutter draws -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>
