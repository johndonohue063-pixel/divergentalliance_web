import 'package:flutter/material.dart';
import './weather_center.dart';

class WeatherCenterGate extends StatefulWidget {
  static const route = '/weather-center-gate';
  const WeatherCenterGate({super.key});

  @override
  State<WeatherCenterGate> createState() => _WeatherCenterGateState();
}

class _WeatherCenterGateState extends State<WeatherCenterGate> {
  static const String _kPin = '8883'; // <- PIN
  final _ctrl = TextEditingController();
  String? _error;

  void _unlock() {
    if (_ctrl.text.trim() == _kPin) {
      Navigator.pushReplacementNamed(context, WeatherCenter.route);
    } else {
      setState(() => _error = 'Incorrect PIN');
    }
  }

  @override
  Widget build(BuildContext context) {
    final theme = Theme.of(context);
    return Scaffold(
      appBar: AppBar(title: const Text('Access')),
      body: Center(
        child: Container(
          width: 340,
          padding: const EdgeInsets.all(20),
          decoration: BoxDecoration(
            color: Colors.black.withOpacity(.35),
            borderRadius: BorderRadius.circular(16),
            border: Border.all(color: const Color(0xFFFF6A00), width: 1),
          ),
          child: Column(
            mainAxisSize: MainAxisSize.min,
            children: [
              const Text('Enter PIN to open Weather Center',
                  textAlign: TextAlign.center,
                  style: TextStyle(fontWeight: FontWeight.w600)),
              const SizedBox(height: 16),
              TextField(
                controller: _ctrl,
                obscureText: true,
                keyboardType: TextInputType.number,
                textAlign: TextAlign.center,
                maxLength: 4,
                decoration: InputDecoration(
                  counterText: '',
                  hintText: '4-digit PIN',
                  errorText: _error,
                  filled: true,
                  fillColor: theme.colorScheme.surface.withOpacity(.2),
                  border: const OutlineInputBorder(),
                ),
                onSubmitted: (_) => _unlock(),
              ),
              const SizedBox(height: 12),
              SizedBox(
                width: double.infinity,
                child: FilledButton(
                  onPressed: _unlock,
                  child: const Text('Unlock'),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
