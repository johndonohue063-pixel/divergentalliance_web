class ScopeIndicatorBulb extends StatelessWidget {
  final bool selected;
  final Color orange;

  const ScopeIndicatorBulb({
    super.key,
    required this.selected,
    required this.orange,
  });

  @override
  Widget build(BuildContext context) {
    final borderColor = selected ? orange : Colors.grey.shade500;
    final gradientColors = selected
        ? <Color>[orange, orange.withOpacity(0.4)]
        : <Color>[Colors.white70, Colors.grey.shade500];

    return Container(
      width: 16,
      height: 16,
      decoration: BoxDecoration(
        shape: BoxShape.circle,
        gradient: RadialGradient(
          colors: gradientColors,
          center: Alignment.topLeft,
          radius: 0.9,
        ),
        border: Border.all(color: borderColor, width: 1.2),
        boxShadow: selected
            ? [
                BoxShadow(
                  color: orange.withOpacity(0.8),
                  blurRadius: 16,
                  spreadRadius: 2,
                )
              ]
            : [
                BoxShadow(
                  color: Colors.black,
                  blurRadius: 6,
                  spreadRadius: 1,
                )
              ],
      ),
    );
  }
}

class ScopePushButton extends StatelessWidget {
  final String label;
  final bool selected;
  final VoidCallback onTap;

  const ScopePushButton({
    super.key,
    required this.label,
    required this.selected,
    required this.onTap,
  });

  @override
  Widget build(BuildContext context) {
    final baseColor = selected ? const Color(0xFF191B21) : const Color(0xFF0C0D10);
    final rimColor = selected ? const Color(0xFFFF7A1A) : Colors.grey.shade600;

    return GestureDetector(
      onTap: onTap,
      child: AnimatedContainer(
        duration: const Duration(milliseconds: 140),
        padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 8),
        decoration: BoxDecoration(
          borderRadius: BorderRadius.circular(20),
          gradient: LinearGradient(
            begin: Alignment.topLeft,
            end: Alignment.bottomRight,
            colors: selected
                ? <Color>[const Color(0xFF20232B), const Color(0xFF101218)]
                : <Color>[const Color(0xFF14151A), const Color(0xFF090A0E)],
          ),
          border: Border.all(color: rimColor, width: selected ? 1.6 : 1.0),
          boxShadow: selected
              ? const [BoxShadow(color: Colors.black87, blurRadius: 14, offset: Offset(0, 6))]
              : const [BoxShadow(color: Colors.black, blurRadius: 8, offset: Offset(0, 4))],
        ),
        child: Center(
          child: Text(
            label.toUpperCase(),
            style: TextStyle(
              color: selected ? const Color(0xFFFF7A1A) : Colors.white70,
              fontSize: 11,
              fontWeight: FontWeight.w700,
              letterSpacing: 1.1,
            ),
          ),
        ),
      ),
    );
  }
}
