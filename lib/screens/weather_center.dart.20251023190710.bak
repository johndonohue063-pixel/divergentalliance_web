import 'package:flutter/material.dart';

/// Value picker signature used in a few helpers.
typedef ValuePicker = dynamic Function(Map row, List<String> keys,
    {dynamic fallback});

class WeatherCenter extends StatefulWidget {
  const WeatherCenter({super.key});
  @override
  State<WeatherCenter> createState() => _WeatherCenterState();
}

class _WeatherCenterState extends State<WeatherCenter> {
  // If you already populate real rows elsewhere, set them here.
  // When _rows is empty we fall back to demo data so the UI isn't blank.
  final List<Map<String, dynamic>> _rows = const [];

  // Computed aggregates for the UI.
  late final List<_StateAgg> _aggs;

  @override
  void initState() {
    super.initState();
    _aggs = _rows.isEmpty ? _demoAggs() : _aggregateByState(_rows);
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Weather Center')),
      body: _aggs.isEmpty
          ? const _EmptyState()
          : ListView.separated(
              padding: const EdgeInsets.all(16),
              itemCount: _aggs.length,
              separatorBuilder: (_, __) => const SizedBox(height: 12),
              itemBuilder: (context, i) => _StateCard(
                agg: _aggs[i],
                pick: _pick,
                probOf: (a) => a.maxProb ?? 0,
                custOf: (a) => a.totalCustomers,
              ),
            ),
    );
  }

  // ---------- Data helpers ----------

  dynamic _pick(Map row, List<String> keys, {dynamic fallback}) {
    for (final k in keys) {
      if (row.containsKey(k) && row[k] != null) return row[k];
    }
    return fallback;
  }

  List<_StateAgg> _aggregateByState(List<Map<String, dynamic>> rows) {
    final byState = <String, _StateAgg>{};
    for (final r in rows) {
      final state =
          (_pick(r, ['state', 'State', 'state_abbr']) ?? '').toString();
      if (state.isEmpty) continue;
      byState.putIfAbsent(state, () => _StateAgg(state: state));
      final s = byState[state]!;

      // probability
      final pRaw = _pick(r,
              ['wind_outage_probability', 'prob', 'Wind Outage Probability %'],
              fallback: 0)
          .toString();
      final p =
          double.tryParse(pRaw.toString().replaceAll('%', '').trim()) ?? 0;
      if (s.maxProb == null || p > s.maxProb!) s.maxProb = p;

      // customers out
      final cRaw = _pick(
              r,
              [
                'predicted_customers_out',
                'customers_out',
                'customers',
                'Predicted Customers Out'
              ],
              fallback: 0)
          .toString();
      final c = num.tryParse(cRaw.replaceAll(',', '').trim()) ?? 0;
      s.totalCustomers += c;

      s.counties.add(r);
    }
    final list = byState.values.toList()
      ..sort((a, b) => (b.maxProb ?? 0).compareTo(a.maxProb ?? 0));
    return list;
  }

  // Small demo so you see a real layout immediately.
  List<_StateAgg> _demoAggs() {
    return [
      _StateAgg(
        state: 'FL',
        maxProb: 48,
        totalCustomers: 32000,
        counties: [
          {
            'county': 'Duval',
            'wind_outage_probability': 52,
            'predicted_customers_out': 14000,
            'threat_level': 'Level 3',
          },
          {
            'county': 'St. Johns',
            'wind_outage_probability': 41,
            'predicted_customers_out': 9000,
            'threat_level': 'Level 2',
          },
          {
            'county': 'Clay',
            'wind_outage_probability': 35,
            'predicted_customers_out': 9000,
            'threat_level': 'Level 2',
          },
        ],
      ),
      _StateAgg(
        state: 'GA',
        maxProb: 34,
        totalCustomers: 12000,
        counties: [
          {
            'county': 'Glynn',
            'wind_outage_probability': 31,
            'predicted_customers_out': 4500,
            'threat_level': 'Level 1',
          },
          {
            'county': 'Camden',
            'wind_outage_probability': 29,
            'predicted_customers_out': 3800,
            'threat_level': 'Level 1',
          },
        ],
      ),
      _StateAgg(
        state: 'SC',
        maxProb: 22,
        totalCustomers: 6000,
        counties: [
          {
            'county': 'Beaufort',
